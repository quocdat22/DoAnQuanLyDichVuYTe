@* @model DoAnQLDichVu.Models.ProfileNhanVien *@
@model DoAnQLDichVu.Models.BC_PF_NV
@{
    
}


<div class="card text-center">
    <div class="card-body">
        
        <h4 class="mb-0 mt-2">Profile Nhân Viên</h4>
        @* <p class="text-muted font-14">Khách hàng đã</p> *@
        
        <img src="~/images/users/@Model.NhanVienProfile.Avatar" class="rounded-circle avatar-lg img-thumbnail mt-2"
             alt="profile-image">
        <div class="text-left mt-3">
            <p class="text-muted mb-3 font-16">
                <strong>Họ và tên :</strong> <span class="ml-2">
                    @Model.NhanVienProfile.HoTen
                </span>
            </p>

            <p class="text-muted mb-3 font-16">
                <strong>Số điện thoại :</strong><span class="ml-2">
                    @Model.NhanVienProfile.SoDienThoai
                </span>
            </p>

            <p class="text-muted mb-3 font-16"><strong>Email :</strong> <span class="ml-2 ">@Model.NhanVienProfile.Diachi</span></p>

            <p class="text-muted mb-3 font-16"><strong>Email :</strong> <span class="ml-2 ">@Model.NhanVienProfile.Email</span></p>

            <p class="text-muted mb-3 font-16"><strong>Giới tính :</strong> <span class="ml-2 ">@(Model.NhanVienProfile.GioiTinh ? "Nam" : "Nữ")</span></p>

            <p class="text-muted mb-3 font-16"><strong>Ngày sinh :</strong> <span class="ml-2">@Model.NhanVienProfile.NgaySinh</span></p>

            <div>
                        <p class="text-muted font-16"><strong>Bằng cấp :</strong><span type="button" class="btn btn-link btn-rounded link-primary" data-toggle="modal" data-target="#centermodal">Xem</span></p>
                        <!-- Center modal -->
                        

                        <div class="modal fade" id="centermodal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myCenterModalLabel">Bằng cấp</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    </div>

                                    <div class="modal-body">
                                        @foreach(var bc in @Model.DanhSachBangCap){
                                            <div>
                                                <p>@bc.TenBangCap</p>
                                                <img src="~/images/bangCap/@bc.HinhAnh" style="width:430px;height:300px"/>
                                            </div>
                                        }
                                    </div>

                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div><!-- /.modal -->
                    
            </div>

            <p class="text-muted mb-3 font-16"><strong>Ngày sinh :</strong> <span class="ml-2">@Model.NhanVienProfile.SoCmnd</span></p>

            <p class="text-muted mb-3 font-16"><strong>Trạng thái tài khoản :</strong> 
                @if(Model.NhanVienProfile.TrangThaiTaiKhoan == 0)
                {
                    <span class="ml-2 text-secondary">Chưa có</span>
                }else if(Model.NhanVienProfile.TrangThaiTaiKhoan == 1)
                {
                    <span class="ml-2 text-info">Đang chờ xét duyệt</span>  
                }
                else if(Model.NhanVienProfile.TrangThaiTaiKhoan == 2)
                {
                    <span class="ml-2 text-success">Đã xác thực</span>  
                }
                else
                {
                    <span class="ml-2 text-danger">Không xác định</span>  
                }
                </p>

            <p class="text-muted mb-3 font-16"><strong>Trạng thái xét duyệt :</strong> 
                @if(Model.NhanVienProfile.TrangThaiXetDuyet == 0)
                {
                    <span class="ml-2 text-secondary">Chờ xét duyệt</span>
                }else if(Model.NhanVienProfile.TrangThaiXetDuyet == 1)
                {
                    <span class="ml-2 text-secondary">Chờ bổ sung từ khách hàng</span>
                }else if (Model.NhanVienProfile.TrangThaiXetDuyet == 2)
                {
                    <span class="ml-2 text-success">Chờ xét duyệt (bổ sung)</span>
                }else if (Model.NhanVienProfile.TrangThaiXetDuyet == 3){
                    <span class="ml-2 text-success">Đã xác nhận</span>
                }
                else
                {
                    <span class="ml-2 text-danger">Từ chối</span>
                }

            </p>

            <p class="text-muted mb-3 font-16"><strong>Thời gian tạo Profile :</strong> <span class="ml-2">@Model.NhanVienProfile.ThoiGianTao</span></p>

            <p class="text-muted mb-3 font-16"><strong>Thời gian cập nhật :</strong> <span class="ml-2">@Model.NhanVienProfile.ThoiGianCapNhat</span></p
            
        </div>

        @if(Model.NhanVienProfile.TrangThaiXetDuyet != 3){
            <div class="mt-4">
                
                    <a class="btn btn-success btn-sm mb-2" href="@Url.Action("ProfileAccept","ProfileNhanVien",new { id = Model.NhanVienProfile.IdNhanVien })">Chấp nhận Profile</a>
@*                 <button asp-controller="ProfileKhachHang" asp-action="ProfileAccept" asp-route-id="@Model.IdKhachHang" type="submit" class="btn btn-success btn-sm mb-2" >Chấp nhận</button>
 *@                <button type="submit" class="btn btn-danger btn-sm mb-2" asp-controller="ProfileNhanVien" asp-action="ProfileReject" asp-route-id="@Model.NhanVienProfile.IdNhanVien">Từ chối Profile</button>
                <button type="button" class="btn btn-info btn-sm mb-2">Yêu cầu thêm thông tin</button>
            </div>
        }else{
           <div>

           </div>
        }
    </div> <!-- end card-body -->
</div> <!-- end card -->
