@{
}

@model List<TK_PF_NV>
<div class="mt-2">
    <a asp-controller="TaiKhoanNhanVien" asp-action="DanhSachTaiKhoan" class="btn btn-primary">Danh sách tài khoản</a>
    <table class="table table-centered .table-hover mb-0">
        <thead>
            <tr>
                <th>Tên nhân viên</th>
                <th>Tên tài khoản</th>
                <th>Ngày gửi</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nv in Model)
            {
                <tr>
                    <td><img src="~/images/users/@nv.Profile.Avatar" alt="image" class="img-fluid avatar-xs mr-2 rounded-circle" />
                        @nv.Profile.HoTen</td>
                    <td>@nv.TaiKhoan.TenDangNhap</td>
                    <td>@nv.TaiKhoan.ThoiGianTao</td>
                    @* <td>@nv.TaiKhoan.TrangThai</td> *@
                    
                    <td class="table-action">
                        <a asp-controller="TaiKhoanNhanVien" asp-action="TaiKhoanReject" asp-route-id="@nv.TaiKhoan.IdNhanVien" class="btn btn-danger">Từ chối</a>
                        <a asp-controller="TaiKhoanNhanVien" asp-action="TaiKhoanAccept" asp-route-id="@nv.TaiKhoan.IdNhanVien" class="btn btn-success">Chấp nhận</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
